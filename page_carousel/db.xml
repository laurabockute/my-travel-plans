<?php xml version="1.0"?>
<schema version="0.3">
    <table name="btPopupGallery">
        <field name="bID" type="I">
            <key/>
            <unsigned/>
        </field>
        <field name="launchLabel" type="C" size="255"></field>
        <field name="theme" type="C"></field>
        <field name="image" type="I">
            <default value="0"/>
            <unsigned/>
        </field>
        <field name="popupHeading" type="C" size="255"></field>
        <field name="popupIntro" type="X2"></field>
    </table>
    <table name="btPopupGalleryImagesEntries">
        <field name="id" type="I">
            <key/>
            <unsigned/>
            <autoincrement/>
        </field>
        <field name="bID" type="I">
            <unsigned/>
        </field>
        <field name="sortOrder" type="I"></field>
        <field name="image" type="I">
            <default value="0"/>
            <unsigned/>
        </field>
        <field name="caption" type="X"></field>
    </table>
</schema>