<?php xml version="1.0"?>
<schema version="0.3">
    <table name="btPageCarousel">
        <field name="bID" type="I">
            <key/>
            <unsigned/>
        </field>
        <field name="heading" type="C" size="255"></field>
        <field name="content" type="X2"></field>
        <field name="useLargeHeading" type="C" size="1">
            <unsigned/>
        </field>
    </table>
    <table name="btPageCarouselItemEntries">
        <field name="id" type="I">
            <key/>
            <unsigned/>
            <autoincrement/>
        </field>
        <field name="bID" type="I">
            <unsigned/>
        </field>
        <field name="sortOrder" type="I"></field>
        <field name="image" type="I">
            <default value="0"/>
            <unsigned/>
        </field>
        <field name="image_link" type="I"></field>
        <field name="title" type="C" size="255"></field>
        <field name="text" type="X2"></field>
        <field name="theme" type="C"></field>
    </table>
</schema>